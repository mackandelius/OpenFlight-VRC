                    "Rikorchi",
                    "943490728v2",
                    "Silvalux",
                    "463788516v2",
                    "Taidum",
                    "328210781v2",
                    "Zurg",
                    "-1254610910v2",
                    "Maelstrorca",
                    "253114771v2",
                    "Freakhound",
                    "-2048057485v2",
                    "Novabeast",
                    "216280090v2",
                    "Shiba Inu",
                    "1227029313v2",
                    "Spirit",
                    "-1486304379v2",
                    "Draconis",
